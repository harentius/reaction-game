<?xml version='1.0' encoding='utf-8'?>
<widget id="harentius.sequence_master" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Sequence Master</name>
    <description>
        Choose biggest available number to win
    </description>
    <author email="yaroslav.osypenko@gmail.com" href="http://folkprog.net">
        Harentius
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="resources/android/icon.png" />

        <splash src="resources/android/splash-screen.png" density="land-hdpi"/>
        <splash src="resources/android/splash-screen.png" density="land-ldpi"/>
        <splash src="resources/android/splash-screen.png" density="land-mdpi"/>
        <splash src="resources/android/splash-screen.png" density="land-xhdpi"/>

        <splash src="resources/android/splash-screen.png" density="port-hdpi"/>
        <splash src="resources/android/splash-screen.png" density="port-ldpi"/>
        <splash src="resources/android/splash-screen.png" density="port-mdpi"/>
        <splash src="resources/android/splash-screen.png" density="port-xhdpi"/>
    </platform>

    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>
</widget>
